# ================================
# Database
# ================================
# Format: postgresql://<user>:<password>@<host>:<port>/<db_name>
database_url=postgresql://POSTGRES_USER:POSTGRES_PASSWORD@db:5432/POSTGRES_DB
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=task_management

# ================================
# Redis Configuration
# ================================
redis_host=redis
redis_port=6379
redis_db=0
redis_password=
notification_ttl=2592000      # 30 days in seconds
task_cache_expiration=300     # 5 minutes
report_cache_ttl=3600         # 1 hour

# ================================
# JWT Configuration
# ================================
# ðŸ‘‰ Generate your own secret key before running
secret_key=your_jwt_secret_key
algorithm=HS256
access_token_expire_days=7
refresh_token_expire_days=30

# ================================
# Application
# ================================
debug=true
log_level=INFO

# ================================
# File Upload
# ================================
allowed_extensions=pdf,docx,xlsx,png,jpg,jpeg,zip
max_file_size=5242880         # 5MB
max_files_per_task=3
upload_dir=uploads

# ================================
# Security
# ================================
bcrypt_rounds=12
cors_origins=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000
